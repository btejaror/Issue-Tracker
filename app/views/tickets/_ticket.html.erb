<% obj.each do |ticket| %>

<div class="row">

<div class="col-xs-8 col-xs-offset-2">

<div class="well well-lg">

<div class="ticket-title">

<%= link_to ticket.title, ticket_path(ticket) %>

</div>

<div class="ticket-body">

<%= truncate(ticket.description, length: 100) %>

<div class="ticket-meta-details">

<small>Created by: <%= ticket.user.username if ticket.user%>,

<%= time_ago_in_words(ticket.created_at) %> ago,

last updated: <%= time_ago_in_words(ticket.updated_at) %> ago</small>

</div>

</div>

<% if logged_in? && (current_user == article.user || current_user.admin?) %>
<div class="ticket-actions">

<%= link_to "Edit this ticket", edit_ticket_path(ticket), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this ticket", ticket_path(ticket), method: :delete,

data: { confirm: "Are you sure you want to delete the ticket?"},

class: "btn btn-xs btn-danger" %>

</div>

<% end %>

</div>

</div>

</div>

<% end %>

