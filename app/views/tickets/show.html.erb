<h2 align="center">Title: <%= @ticket.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">

<% if @ticket.user %>

<ul class="listing">

<div class="row center">

<div class="col-md-4 col-md-offset-4">

<li>Created by:</li>

<li><%= link_to gravatar_for(@ticket.user), user_path(@ticket.user) %></li>

<li class="ticket-title">

<%= link_to @ticket.user.username, user_path(@ticket.user) %>

</li>

<li><small>

<%#= pluralize(@ticket.user.tickets.count, "ticket") if @ticket.user.tickets %>

</small></li>

</div>

</div>

</ul>

<% end %>

<h4 class="center description"><strong>Description:</strong></h4>

<hr>

<%= simple_format(@ticket.description) %>

<div class="ticket-actions">
<% if logged_in? && (current_user == article.user || current_user.admin?) %>

<%= link_to "Edit this ticket", edit_ticket_path(@ticket), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this ticket", ticket_path(@ticket), method: :delete,

data: { confirm: "Are you sure you want to delete the ticket?"},

class: "btn btn-xs btn-danger" %>

<% end %>

<%= link_to "View all tickets", tickets_path, class: "btn btn-xs btn-success" %>

</div>

</div>

